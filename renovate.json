{
    "extends": ["config:base"],
    "labels": ["[type] chore", "[status] needs review"],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": "every weekday"
    },
    "packageRules": [
        {
            "updateTypes": ["minor", "patch", "pin", "digest"],
            "automerge": true
        }
    ],
    "prConcurrentLimit": 0,
    "prHourlyLimit": 50,
    "semanticCommits": true,
    "semanticCommitType": "chore"
}
